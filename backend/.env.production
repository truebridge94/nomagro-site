# Production Environment Variables for Nomagro Backend
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
PORT=5000

# Security
JWT_SECRET=nomagro-super-secret-jwt-key-2024-change-this-in-production-minimum-32-characters
JWT_EXPIRE=30d

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/nomagro
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nomagro

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key-here

# CORS Configuration
CLIENT_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=15

# Logging
LOG_LEVEL=info

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/nomagro-backend/uploads

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here